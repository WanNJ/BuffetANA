<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <JFXTabPane rotateGraphic="true" side="LEFT" stylesheets="@../../css/jfoenix-components.css">
      <tabs>
         <Tab text="总交易量">
           <content>
			   <StackPane>
				   <children>
					   <BarChart StackPane.alignment="CENTER">
						   <xAxis>
							   <CategoryAxis side="BOTTOM" />
						   </xAxis>
						   <yAxis>
							   <NumberAxis side="LEFT" />
						   </yAxis>
					   </BarChart>
				   </children>
			   </StackPane>
           </content>
         </Tab>
         <Tab text="涨/跌停股票数">
			 <content>
				 <StackPane>
					 <children>
						 <BarChart StackPane.alignment="CENTER">
							 <xAxis>
								 <CategoryAxis side="BOTTOM" />
							 </xAxis>
							 <yAxis>
								 <NumberAxis side="LEFT" />
							 </yAxis>
						 </BarChart>
					 </children>
				 </StackPane>
			 </content>
		 </Tab>
         <Tab text="涨/跌幅超过5%股票数">
            <content>
				<StackPane>
					<children>
						<BarChart StackPane.alignment="CENTER">
							<xAxis>
								<CategoryAxis side="BOTTOM" />
							</xAxis>
							<yAxis>
								<NumberAxis side="LEFT" />
							</yAxis>
						</BarChart>
					</children>
				</StackPane>
            </content>
         </Tab>
         <Tab text="当天涨/跌大于上一个交易日 5 %的股票数">
            <content>
				<StackPane>
					<children>
						<BarChart StackPane.alignment="CENTER">
							<xAxis>
								<CategoryAxis side="BOTTOM" />
							</xAxis>
							<yAxis>
								<NumberAxis side="LEFT" />
							</yAxis>
						</BarChart>
					</children>
				</StackPane>
            </content>
         </Tab>
      </tabs></JFXTabPane>

</StackPane>
