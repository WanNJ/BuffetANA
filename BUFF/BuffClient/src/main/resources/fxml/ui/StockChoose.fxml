<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane vgap="50.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <JFXComboBox editable="true" maxWidth="200.0" promptText="股票池" />
                  <JFXComboBox editable="true" maxWidth="200.0" promptText="板块" />
                  <JFXComboBox editable="true" maxWidth="200.0" promptText="行业" />
                  <JFXCheckBox text="排除ST">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </JFXCheckBox>
               </children>
            </HBox>
            <VBox alignment="CENTER" GridPane.rowIndex="1">
               <children>
                  <Label text="选股指标">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <FlowPane prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.rowIndex="2">
               <children>
                  <Label text="排序方式">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <FlowPane prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
         </children>
      </GridPane>
   </children>
</StackPane>
